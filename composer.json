{
  "name": "msbios/monolog",
  "description": "MSBios Monolog",
  "license": "GPL",
  "keywords": [
    "php"
  ],
  "homepage": "https://github.com/msbios/msbios-monolog",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Judzhin Miles",
      "email": "info@msbios.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "MSBios\\Monolog\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MSBiosTest\\Monolog\\": "tests/"
    }
  },
  "require": {
    "zendframework/zend-loader": "^2.5",
    "monolog/monolog": "^1.23",
    "msbios/msbios": "^0.0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "zendframework/zend-test": "^3.1",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": [
      "@cs-check",
      "phpunit"
    ],

    "cleanup": "rm ./data/cache/*.php && rm ./data/log/*.log",
    "commit": "git add . && git commit -a -m \"Intermedaite commit\" && git push"
  }
}
